<Window x:Class="VRCOSC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VRCOSC"
        xmlns:properties="clr-namespace:VRCOSC.Properties"
        mc:Ignorable="d"
        Title="VRC OSC Chatbox v0.3" Height="450" Width="800">
    <Grid Background="#222222">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock  Text="VRC OSC Chatbox"
                    Foreground="White"
                    Grid.Column="1"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="24"
            />

        <TextBox Name="ChatBox" 
                 Text="{Binding Path=CurrentText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 KeyDown="TextBoxKeyDown"
                 TextChanged="TextChanged"
                 Grid.Column="0" 
                 Grid.ColumnSpan="3"
                 Grid.Row="2" 
                 HorizontalAlignment="Stretch" 
                 VerticalAlignment="Center" 
                 Margin="48,0,48,0"
                 TextWrapping="Wrap"
                 FontSize="20" 
                 MaxLength="144"
                 Height="128"              
                />
        <TextBlock Name="NumberLetter"
                   Grid.Row="3"
                   Grid.Column="2"
                   Foreground="White"
                   HorizontalAlignment="Right"
                   FontSize="16" Margin="0,0,48,0"
            />
        <Button Name="Send" 
                Grid.Column="1" 
                Grid.Row="4" 
                Click="SendClick" 
                FontSize="24" 
                Height="Auto" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch" 
                Margin="16,16,16,16"
                >Send</Button>
        <TextBlock Text="By Dbqt"
                   Foreground="White"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Grid.Column="2"
                   Grid.Row="5" Margin="8,8,8,8"/>
        <CheckBox 
            Name="SendWhileTypingCheckBox"
            Content="Send while typing"
            Foreground="White"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Grid.Column="1"
            Grid.Row="5"
            Margin="8,8,8,8"
            Checked="SendWhileTypingCheckBoxChanged"
            Unchecked="SendWhileTypingCheckBoxChanged"/>
    </Grid>
</Window>
